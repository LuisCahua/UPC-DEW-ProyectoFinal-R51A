  <div class="row-fluid">
       
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                  <h5>Tipo de Documentos</h5>
                  <div class="buttons">  
                    <%= link_to new_typedocument_path , :class => 'btn btn-primary' do %>
                        <i class="icon-plus icon-white"></i> Agregar Tipo de Documento
                    <% end %>    
                  </div>
                </div>
                
                <div class="widget-content">
                  
                  <div style="padding-top:10px;padding-left:10px">
                    <table class="table table-hover" width="700px">
                      <thead>
                       <tr>
                        <th width="30px">Codigo</th>
                        <th width="400px">Nombre</th>
                        <th width="10px"></th>
                        <th width="10px"></th>
                        <th width="10px"></th>
                       </tr>
                      </thead>
                    <% @typedocuments.each do |typedocument| %>
                      <tr>
                        <td><%= typedocument.id %></td>
                        <td><%= typedocument.name %></td>
                        <td>
                            <%= link_to typedocument, :title => "Mostrar"  do %>
                                  <i class="icon-align-justify"></i>
                            <% end %> 
                        </td>
                        <td>
                            <%= link_to  edit_typedocument_path(typedocument), :title => "Editar"  do %>
                                  <i class="icon-pencil"></i>
                            <% end %> 
                        </td>
                        <td>
                            <%= link_to typedocument, method: :delete, data: { confirm: 'Â¿Estas seguro?' }, :title => "Eliminar" do %>
                                  <i class="icon-remove"></i>
                              <% end %> 
                        </td>
                      </tr>
                    <% end %>
                    </table>

                  </div>

                </div>
             </div>
          
         </div>

  </div>