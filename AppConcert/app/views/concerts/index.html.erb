<h1>Listing concerts</h1>

<table>
  <tr>
    <th>Date</th>    
    <th>Created</th>
    <th>Place</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @concerts.each do |concert| %>
  <tr>
    <td><%= concert.date %></td>     
    <td><%= concert.user.name %></td>
    <td><%= concert.place.name %></td>
    <td><%= concert.group.name %></td>
    <td><%= link_to 'Show', concert %></td>
    <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
    <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

