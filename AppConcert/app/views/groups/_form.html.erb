<%= form_for(@group, html: {multipart: true} ) do |f| %>
  <% if @group.errors.any? %>
    <div class="alert alert-error">
      <b>Oh Error!</b>
      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-horizontal"> 

    <div class="control-group">
      <span class="control-label">
        <%= f.label :name, "Grupo" %> </span>
      <div class="controls" >
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <span class="control-label">
        <%= f.label :photo , "Foto" %></span>
      <div class="controls" >
        <%= f.file_field :photo %>
      </div>
    </div>


    <div class="control-group">
      <span class="control-label">
    <%= f.label :style, "Estilo" %></span>
      <div class="controls" >
     <%= f.collection_select :style_id, Style.all, :id, :name, :prompt => true %>    
  </div>
    </div>

    <table>
      <tr>
        <td width="180px" >
            <div style="text-align:right;padding-top:5px;width:100%">
            Integrantes&nbsp;&nbsp;&nbsp;
            <div>
        </td>
        <td>

    <%= f.text_field :user_tokens, "data-pre" => @group.users.map(&:attributes).to_json %>
        </td>
      </tr>
    </table>
  <div class="control-group">
      <span class="control-label">
   </span>
      <div class="controls" >
</div>
    </div>
  <div class="form-actions">
     <%= button_tag( type: 'submit', class: "btn btn-primary") do %>
        <i class="icon-ok icon-white"></i> Guardar
      <% end %>
  </div>

   </div>
<% end %>
