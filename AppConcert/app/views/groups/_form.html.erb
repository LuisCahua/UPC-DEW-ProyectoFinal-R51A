<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-horizontal"> 

    <div class="control-group">
      <span class="control-label">
        <%= f.label :name %> </span>
      <div class="controls" >
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <span class="control-label">
        <%= f.label :image %></span>
      <div class="controls" >
        <%= f.text_field :image %>
      </div>
    </div>


    <div class="control-group">
      <span class="control-label">
    <%= f.label :style %></span>
      <div class="controls" >
     <%= f.collection_select :style_id, Style.all, :id, :name, :prompt => true %>    
  </div>
    </div>
  <div class="control-group">
      <span class="control-label">
    <%= f.label :user_tokens, "Integrantes" %></span>
      <div class="controls" >
    <%= f.text_field :user_tokens, "data-pre" => @group.users.map(&:attributes).to_json %>
</div>
    </div>
  <div class="form-actions">
    <%= f.submit 'Save', :class => 'btn btn-primary'  %>
  </div>

   </div>
<% end %>
