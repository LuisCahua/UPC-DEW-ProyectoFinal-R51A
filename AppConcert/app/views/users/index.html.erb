  <div class="row-fluid">
       
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                  <h5>Listing users</h5>
                  <div class="buttons">  
                    <%= link_to 'New User', new_user_path, :class => 'btn btn-primary'  %>
                  </div>
                </div>
                
                <div class="widget-content">
                    <div style="padding-top:10px;padding-left:10px">
                    <table class="table table-hover" width="900px">
                      <thead>
                      <tr>
                        <th width="20px">Type</th>
                        <th width="150px">Name</th>
                        <th width="150px">Lastname</th>
                        <th width="20px">Sex</th>
                        <th width="120px">Document type</th>
                        <th width="150px">Document number</th>
                        <th width="100px">Email</th>                       
                        <th width="20px"></th>
                        <th width="20px"></th>
                        <th width="20px"></th>
                      </tr>
                      </thead>
                    <% @users.each do |user| %>
                      <tr>
                       
                        <td><%= user.email %></td>
                        <td><%= user.crypted_password %></td>                        
                        <td> </td>
                        <td> </td>
                        <td></td> 
                        <td><%= link_to 'Show', user %></td>
                        <td><%= link_to 'Edit', edit_user_path(user) %></td>
                        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                    </table>

                    </div>

                </div>
             </div>
          
         </div>

  </div>


