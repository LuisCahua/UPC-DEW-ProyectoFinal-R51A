<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal"> 

    <div class="control-group">
      <span class="control-label">
        <%= f.label :user_type %>
      </span>
      <div class="controls" >
        <%= f.number_field :user_type %>
      </div>
    </div>

    <div class="control-group">
      <span class="control-label">
      <%= f.label :name %>
      </span>
      <div class="controls" >
      <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <span class="control-label">
      <%= f.label :lastname %>  
      </span>
      <div class="controls" >
      <%= f.text_field :lastname %>
      </div>
    </div>

    <div class="control-group">
      <span class="control-label">
      <%= f.label :sex %> 
      </span>
      <div class="controls" >
        <%= f.number_field :sex %>
      </div>
    </div>

    <div class="control-group">
      <span class="control-label">
        <%= f.label :document_type %>
      </span>
      <div class="controls" >
        <%= f.number_field :document_type %>
      </div>
    </div>

     <div class="control-group">
      <span class="control-label">
        <%= f.label :document_number %>
      </span>
      <div class="controls" >
        <%= f.text_field :document_number %>
      </div>
    </div>

    <div class="control-group">
      <span class="control-label">
        <%= f.label :email %>
       </span>
      <div class="controls" >
        <%= f.text_field :email %>
      </div>
    </div>


    <div class="control-group">
      <span class="control-label">
        <%= f.label :foursquare_token %>
      </span>
      <div class="controls" >
        <%= f.text_field :foursquare_token %>
      </div>
    </div>


    <div class="control-group">
      <span class="control-label">
        <%= f.label :password %>
      </span>
      <div class="controls" >
        <%= f.text_field :password %>
      </div>
    </div>

  <div class="form-actions">
    <%= f.submit 'Save', :class => 'btn btn-primary' %>
  </div>
<% end %>
