  <div class="row-fluid">
       
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                  <h5>Listing styles</h5>
                  <div class="buttons">  
                    <%= link_to 'New Style', new_style_path , :class => 'btn btn-primary' %>
                  </div>
                </div>
                
                <div class="widget-content">
                   
                  <div style="padding-top:10px;padding-left:10px">
                      <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th></th>
                          <th></th>
                          <th></th>
                        </tr>
                      </thead>
                      <% @styles.each do |style| %>
                        <tr>
                          <td><%= style.name %></td>
                          <td><%= link_to 'Show', style  %></td>
                          <td><%= link_to 'Edit', edit_style_path(style) %></td>
                          <td><%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                      </table>

                       
                   </div>

                </div>
             </div>
        
         </div>

  </div>
                    
